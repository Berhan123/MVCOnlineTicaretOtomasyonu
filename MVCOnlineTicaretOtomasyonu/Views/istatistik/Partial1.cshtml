@model IEnumerable<MVCOnlineTicaretOtomasyonu.Models.Siniflar.SinifGroup2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Condensed Full Width Table</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Label</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0; }
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{ sirano++;} @sirano.</td>
                        <td>@x.Departman</td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-blue" style="width: 55%;"></div>
                                </div>
                            }
                            @if (x.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%;"></div>
                                </div>
                            }
                            @if (x.Sayi == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-green" style="width: 55%;"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <span class="badge bg-blue">@x.Sayi</span>
                            }
                            @if (x.Sayi == 2)
                            {
                                <span class="badge bg-warning">@x.Sayi</span>
                            }
                            @if (x.Sayi == 3)
                            {
                                <span class="badge bg-green">@x.Sayi</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>